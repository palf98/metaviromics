title = {{The truth about metagenomics: Quantifying and counteracting bias in 16S rRNA studies Ecological and evolutionary microbiology}},
url = {https://bmcmicrobiol.biomedcentral.com/articles/10.1186/s12866-015-0351-6},
volume = {15},
year = {2015}
}

