keywords = {Behrens,Fisher problem,PERMANOVA,bootstrap,dissimilarity matrix,ecological community data,permutation test},
mendeley-groups = {TFM/Definitive},
month = {mar},
number = {1},
pages = {57--79},
publisher = {John Wiley \& Sons, Ltd},
title = {{Some solutions to the multivariate Behrens–Fisher problem for dissimilarity-based analyses}},
